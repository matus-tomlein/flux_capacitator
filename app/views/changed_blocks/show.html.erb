<%- model_class = ChangedBlock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:update_id) %>:</strong></dt>
  <dd><%= @changed_block.update_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @changed_block.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:change_type) %>:</strong></dt>
  <dd><%= @changed_block.change_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              changed_blocks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_changed_block_path(@changed_block), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              changed_block_path(@changed_block),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
